<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".general">

    <Button
        android:id="@+id/añadir"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_marginTop="304dp"
        android:background="#1388B8"
        android:text="AFEGIR ALUMNE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/RelativeLayout"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="72dp"
        android:background="#1388B8"
        android:text="MOSTRAR ALUMNES"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aprobar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/help"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="72dp"
        android:background="#1388B8"
        android:text="AJUDA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/añadir"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/aprobar"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_marginTop="304dp"
        android:background="#1388B8"
        android:text="APROVA TOTHOM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/notas"
        android:layout_width="288dp"
        android:layout_height="114dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="REGISTRADOR DE NOTAS"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191" />
</androidx.constraintlayout.widget.ConstraintLayout>